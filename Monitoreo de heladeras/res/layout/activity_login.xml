<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="ContentDescription, HardcodedText, Autofill, TextFields"
    android:background="@drawable/fondosd">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitleInfo"
        android:text="Página de consulta: "
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:layout_margin="10sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvInfoWebConsulta"
        android:text=""
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic"
        android:layout_margin="10sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvTitleInfo"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:text="Ingrese usuario y contraseña."
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:layout_margin="10sp"
        android:gravity="center"
        android:layout_below="@+id/tvInfoWebConsulta"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Usuario"
        android:id="@+id/etUser"
        android:layout_below="@+id/tvTitle"
        android:inputType="number"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:id="@+id/etPass"
        android:layout_below="@id/etUser"
        android:inputType="number"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:id="@+id/btnSave"
        android:textColor="@android:color/black"
        app:backgroundTint="#ffaba0"
        android:layout_below="@+id/etPass"
        />
</RelativeLayout>
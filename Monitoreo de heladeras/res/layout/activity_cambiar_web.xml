<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="ContentDescription, HardcodedText, Autofill, TextFields, LabelFor"
    android:background="@drawable/fondosd">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:text="Cambio de dirección web"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:paddingTop="10sp"
        android:gravity="center"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swProtocol"
        app:backgroundTint="#ffaba0"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvTitle"
        android:layout_marginStart="5sp"
        android:onClick="onSwitchClick">
    </Switch>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNamePr"
        android:text="http"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/swProtocol"
        android:layout_toStartOf="@+id/swProtocol">
    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etNewAddress"
        android:hint="Ingrese la nueva dirección web"
        android:textSize="18sp"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        android:inputType="textWebEmailAddress"
        android:layout_marginTop="30sp"
        android:layout_below="@+id/swProtocol">
    </EditText>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSaveAddress"
        android:text="Guardar"
        android:textColor="@android:color/black"
        app:backgroundTint="#ffaba0"
        android:layout_alignParentStart="true"
        android:layout_below="@id/etNewAddress">
    </Button>
</RelativeLayout>